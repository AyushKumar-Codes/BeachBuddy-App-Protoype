<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/toggle_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is checked -->
    <item android:state_checked="true"
        >
        <shape android:shape="rectangle">
            <solid android:color="#BBFAFA" /> <!-- Background color when checked -->
            <corners android:radius="100dp" />
            <!-- Corner radius -->
        </shape>
    </item>

    <!-- State when the button is unchecked -->
    <item android:state_checked="false"
        >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color when unchecked -->
            <corners android:radius="100dp" /> <!-- Corner radius -->
        </shape>
    </item>
</selector>
