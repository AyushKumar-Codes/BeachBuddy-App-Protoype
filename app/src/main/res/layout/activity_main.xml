<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fitsSystemWindows="true"
        tools:context=".MainActivity"
        >


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapfragment"
            class="com.google.android.gms.maps.SupportMapFragment"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"

            android:layout_width="0dp"
            android:layout_height="45dp"

            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"

            app:cardCornerRadius="20dp"

            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@id/main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardView_ConstraintLayout"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/imageView"

                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:elevation="100dp"

                    android:paddingLeft="5dp"
                    android:layout_marginLeft="3dp"

                    android:src="@drawable/searchico"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"

                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                />


                <SearchView
                    android:id="@+id/search"

                    android:layout_width="313dp"
                    android:layout_height="57dp"

                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"

                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:iconifiedByDefault="false"

                    android:inputType="text"
                    android:queryHint="Explore Beaches"

                    android:textCursorDrawable="@null"
                    app:closeIcon="@null"

                    app:layout_constraintStart_toStartOf="@id/cardView_ConstraintLayout"
                    app:layout_constraintTop_toTopOf="parent"


                    app:queryBackground="@null"
                    app:searchIcon="@null" />

                <ImageView
                    android:id="@+id/accountButton"

                    android:layout_width="50dp"
                    android:layout_height="30sp"

                    android:src="@drawable/acc"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rightSidePanel_constraintLayout"

            android:layout_width="40dp"
            android:layout_height="0dp"

            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"

            app:layout_constraintRight_toRightOf="@id/main"
            app:layout_constraintTop_toBottomOf="@id/suggestionRecyclerViewer"
            >

            <LinearLayout
                android:id="@+id/notification_linearLayout"

                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:gravity="center"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >

                <Button
                    android:id="@+id/notification_button"

                    android:layout_width="25sp"
                    android:layout_height="25sp"

                    android:layout_marginBottom="8sp"

                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:gravity="center"

                    android:textOn=""
                    android:textOff=""

                    android:background="@drawable/notification_bell"
                    />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- recycler for tags-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggestionRecyclerViewer"
            android:visibility="visible"

            android:layout_width="0dp"
            android:layout_height="40dp"

            android:layout_marginTop="8sp"

            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.0"

            app:layout_constraintRight_toRightOf="@id/main"
            app:layout_constraintLeft_toLeftOf="@id/main"
            app:layout_constraintTop_toBottomOf="@id/cardView"/>
        
        <!-- recycler for search results -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/RecyclerConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/suggestionRecyclerViewer"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/RecentSearchesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="Recently Searched"
                android:textColor="@color/material_dynamic_primary40"
                android:textSize="24sp"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="@+id/RecyclerConstraintLayout"
                app:layout_constraintLeft_toLeftOf="@id/RecyclerConstraintLayout"
                app:layout_constraintRight_toRightOf="@id/RecyclerConstraintLayout"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/MainRecyclerView"
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"

                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="@id/RecyclerConstraintLayout"
                app:layout_constraintLeft_toLeftOf="@id/RecyclerConstraintLayout"
                app:layout_constraintRight_toRightOf="@id/RecyclerConstraintLayout"
                app:layout_constraintTop_toBottomOf="@id/RecentSearchesTextView"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"

            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:elevation="100dp"
            android:visibility="visible"

            app:layout_constraintVertical_bias="0.0"

            app:layout_constraintTop_toBottomOf="@id/suggestionRecyclerViewer"
            app:layout_constraintBottom_toTopOf="@id/menu"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <FrameLayout
                android:id="@+id/activites"
                style="?attr/bottomSheetStyle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bottomsheet"
                android:elevation="100dp"

                app:behavior_peekHeight="0dp"
                app:layout_anchor="@id/activites"
                app:layout_anchorGravity="center"

                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
                <include layout="@layout/beach_activities"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/bottom_weather"
                style="?attr/bottomSheetStyle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bottomsheet"
                android:elevation="100dp"

                app:behavior_peekHeight="0dp"
                app:layout_anchor="@id/bottom_weather"
                app:layout_anchorGravity="center"

                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
                <include layout="@layout/weather" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/bottom_Alert"
                style="?attr/bottomSheetStyle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bottomsheet"
                android:elevation="100dp"

                app:behavior_peekHeight="0dp"

                app:layout_anchor="@id/bottom_Alert"
                app:layout_anchorGravity="center"

                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

                <include layout="@layout/alert" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/navibutton"
                style="?attr/bottomSheetStyle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bottomsheet"

                android:elevation="30dp"

                android:visibility="gone"

                app:behavior_peekHeight="0dp"

                app:layout_anchor="@id/bottom_Alert"
                app:layout_anchorGravity="center"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

                <include
                    android:id="@+id/includednavi"
                    layout="@layout/navigation" />

            </FrameLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/menu"

            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:visibility="visible"

            app:cardElevation="20dp"

            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="1.0"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/main"
            >

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/bottommenu"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/material_dynamic_tertiary99"

                app:singleSelection="true"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"

                app:layout_constraintBottom_toBottomOf="@+id/main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >


                <Button
                    android:id="@+id/act"
                    style="@style/ToggleButtonWithIconOnly"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"

                    android:fontFamily="@font/belanosima_semibold"
                    android:text="Activities"
                    android:textSize="12dp"

                    app:icon="@drawable/act"
                    app:iconGravity="top"
                    app:iconSize="35dp"/>

                <Button
                    android:id="@+id/weather"
                    style="@style/ToggleButtonWithIconOnly"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:text="Weather"
                    android:fontFamily="@font/belanosima_semibold"
                    android:textSize="12dp"

                    app:icon="@drawable/weather"
                    app:iconGravity="top"
                    app:iconSize="35dp"

                    app:cornerRadius="0dp"/>

                <Button
                    android:id="@+id/alerts"
                    style="@style/ToggleButtonWithIconOnly"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:text="Alerts"
                    android:fontFamily="@font/belanosima_semibold"

                    app:icon="@drawable/alert"
                    app:iconGravity="top"
                    app:iconSize="35dp"
                    android:textSize="12dp"
                />

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
